@model IEnumerable<AirlineProject.Data.Plane>

@{
    ViewData["Title"] = "Planes";
}

<h1>Our Fleet</h1>

<div>
    <a class="navbar-brand" asp-area="" asp-controller="Plane" asp-action="Create">New Plane</a>
    <table class="table">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(model => model.id)</td>
                <td>@Html.DisplayNameFor(model => model.name)</td>
                <td>@Html.DisplayNameFor(model => model.capacity)</td>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var plane in Model)
            {
            <tr>
                <td>@Html.DisplayFor(modelitem => plane.id)</td>
                <td>@Html.DisplayFor(modelitem => plane.name)</td>
                <td>@Html.DisplayFor(modelitem => plane.capacity)</td>

                <td>@Html.ActionLink("Details", "Details", new { id = plane.id })</td>

            </tr>
            }
        </tbody>
    </table>
</div>
